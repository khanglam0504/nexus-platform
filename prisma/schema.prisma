generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth Models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Core Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  emailVerified DateTime? @map("email_verified")
  image         String?
  role          UserRole  @default(MEMBER)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts       Account[]
  sessions       Session[]
  workspaces     WorkspaceMember[]
  messages       Message[]
  reactions      Reaction[]
  debateSessions DebateSession[]

  @@map("users")
}

enum UserRole {
  ADMIN
  MEMBER
}

model Workspace {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  image     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  members  WorkspaceMember[]
  channels Channel[]
  agents   Agent[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String          @id @default(cuid())
  workspaceId String          @map("workspace_id")
  userId      String          @map("user_id")
  role        WorkspaceRole   @default(MEMBER)
  createdAt   DateTime        @default(now()) @map("created_at")

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
}

model Channel {
  id          String      @id @default(cuid())
  name        String
  description String?
  type        ChannelType @default(PUBLIC)
  workspaceId String      @map("workspace_id")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  workspace      Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  messages       Message[]
  channelAgents  ChannelAgent[]
  debateSessions DebateSession[]

  @@unique([workspaceId, name])
  @@map("channels")
}

enum ChannelType {
  PUBLIC
  PRIVATE
  DM
}

model Message {
  id        String    @id @default(cuid())
  content   String    @db.Text
  userId    String?   @map("user_id")
  agentId   String?   @map("agent_id")
  channelId String    @map("channel_id")
  threadId  String?   @map("thread_id")
  isPinned  Boolean   @default(false) @map("is_pinned")
  pinnedAt  DateTime? @map("pinned_at")
  pinnedBy  String?   @map("pinned_by")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  user        User?            @relation(fields: [userId], references: [id], onDelete: SetNull)
  agent       Agent?           @relation(fields: [agentId], references: [id], onDelete: SetNull)
  channel     Channel          @relation(fields: [channelId], references: [id], onDelete: Cascade)
  parent      Message?         @relation("Thread", fields: [threadId], references: [id], onDelete: SetNull)
  replies     Message[]        @relation("Thread")
  reactions   Reaction[]
  attachments FileAttachment[]

  @@index([channelId, createdAt])
  @@index([channelId, isPinned])
  @@map("messages")
}

model FileAttachment {
  id        String   @id @default(cuid())
  name      String
  url       String
  type      String
  size      Int
  messageId String   @map("message_id")
  createdAt DateTime @default(now()) @map("created_at")

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@map("file_attachments")
}

model Reaction {
  id        String   @id @default(cuid())
  emoji     String
  userId    String   @map("user_id")
  messageId String   @map("message_id")
  createdAt DateTime @default(now()) @map("created_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([userId, messageId, emoji])
  @@map("reactions")
}

model Agent {
  id                String        @id @default(cuid())
  name              String
  description       String?
  type              AgentType     @default(ASSISTANT)
  avatar            String?
  config            Json?
  workspaceId       String        @map("workspace_id")
  isActive          Boolean       @default(true) @map("is_active")
  // Heartbeat/Scheduler fields
  lastHeartbeat     DateTime?     @map("last_heartbeat")
  heartbeatInterval Int           @default(30) @map("heartbeat_interval") // seconds
  // Autonomy Level
  autonomyLevel     AutonomyLevel @default(SPECIALIST) @map("autonomy_level")
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")

  workspace     Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  messages      Message[]
  channelAgents ChannelAgent[]
  debateAgents  DebateAgent[]
  context       AgentContext?

  @@map("agents")
}

enum AgentType {
  ASSISTANT
  CODER
  ANALYST
  RESEARCHER
}

enum AutonomyLevel {
  INTERN     // Needs approval for everything
  SPECIALIST // Can execute within defined scope
  LEAD       // Can approve other agents' work
  AUTONOMOUS // Full autonomy
}

// Multi-Agent Debate Models

// Links agents to channels for debate participation
model ChannelAgent {
  id        String   @id @default(cuid())
  channelId String   @map("channel_id")
  agentId   String   @map("agent_id")
  isActive  Boolean  @default(true) @map("is_active")
  joinedAt  DateTime @default(now()) @map("joined_at")

  channel Channel @relation(fields: [channelId], references: [id], onDelete: Cascade)
  agent   Agent   @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@unique([channelId, agentId])
  @@map("channel_agents")
}

// Debate session for multi-agent discussions
model DebateSession {
  id          String        @id @default(cuid())
  title       String
  task        String        @db.Text
  channelId   String        @map("channel_id")
  status      DebateStatus  @default(PENDING)
  maxTurns    Int           @default(5) @map("max_turns")
  currentTurn Int           @default(0) @map("current_turn")
  summary     String?       @db.Text
  createdBy   String        @map("created_by")
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")
  completedAt DateTime?     @map("completed_at")

  channel Channel       @relation(fields: [channelId], references: [id], onDelete: Cascade)
  creator User          @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  agents  DebateAgent[]
  turns   DebateTurn[]

  @@index([channelId, status])
  @@map("debate_sessions")
}

enum DebateStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Agents participating in a debate
model DebateAgent {
  id              String   @id @default(cuid())
  debateSessionId String   @map("debate_session_id")
  agentId         String   @map("agent_id")
  role            String?  // e.g., "advocate", "critic", "moderator"
  joinedAt        DateTime @default(now()) @map("joined_at")

  debateSession DebateSession @relation(fields: [debateSessionId], references: [id], onDelete: Cascade)
  agent         Agent         @relation(fields: [agentId], references: [id], onDelete: Cascade)
  turns         DebateTurn[]

  @@unique([debateSessionId, agentId])
  @@map("debate_agents")
}

// Individual turns/responses in a debate
model DebateTurn {
  id              String   @id @default(cuid())
  debateSessionId String   @map("debate_session_id")
  debateAgentId   String   @map("debate_agent_id")
  turnNumber      Int      @map("turn_number")
  content         String   @db.Text
  reasoning       String?  @db.Text
  createdAt       DateTime @default(now()) @map("created_at")

  debateSession DebateSession @relation(fields: [debateSessionId], references: [id], onDelete: Cascade)
  debateAgent   DebateAgent   @relation(fields: [debateAgentId], references: [id], onDelete: Cascade)

  @@index([debateSessionId, turnNumber])
  @@map("debate_turns")
}

// Agent Context - Working state and memory for agents
model AgentContext {
  id             String   @id @default(cuid())
  agentId        String   @unique @map("agent_id")
  // Current working state (JSON: currentTask, lastAction, pendingItems)
  workingState   Json?    @map("working_state")
  // Daily notes for the agent
  dailyNotes     String?  @db.Text @map("daily_notes")
  // Long-term memory/context
  longTermMemory String?  @db.Text @map("long_term_memory")
  // Loading state flag
  isLoading      Boolean  @default(false) @map("is_loading")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@map("agent_contexts")
}
